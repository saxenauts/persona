# Environment Variables

# LLM Service Configuration
# Format: provider/model (e.g., "openai/gpt-4o-mini", "azure/gpt-4o-mini", "anthropic/claude-3-5-sonnet-20241022", "gemini/gemini-1.5-flash")
LLM_SERVICE=azure/gpt-4o-mini

# OpenAI Configuration
OPENAI_API_KEY=
OPENAI_CHAT_MODEL=gpt-4o-mini
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# Azure OpenAI Configuration
AZURE_API_KEY=
AZURE_API_BASE=
AZURE_API_VERSION=2024-02-01
AZURE_CHAT_DEPLOYMENT=gpt-4o-mini
AZURE_EMBEDDING_DEPLOYMENT=text-embedding-3-small

# Anthropic Configuration
ANTHROPIC_API_KEY=
ANTHROPIC_CHAT_MODEL=claude-3-5-sonnet-20241022

# Google Gemini Configuration
GEMINI_API_KEY=
GEMINI_CHAT_MODEL=gemini-1.5-flash

# Neo4j Configuration for Application Config
URI_NEO4J=bolt://neo4j:7687
USER_NEO4J=neo4j
PASSWORD_NEO4J=password

# Neo4j Docker Configuration
NEO4J_AUTH=neo4j/password
